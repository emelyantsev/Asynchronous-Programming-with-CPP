{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "DEBUG - C/C++: g++ build all *.cpp in folder",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++23",
                "-Wall",
                "-Wextra",
                "-pedantic",
                "-fdiagnostics-color=always",
                "-g",
                "*.cpp",
                "-I", "/usr/include/boost/",
                "-I", "${workspaceFolder}/common",
                "-L/usr/local/lib/",
                "-lboost_thread",
                "-latomic",
                "-o",
                "${fileDirname}/${fileDirnameBasename}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "RELEASE - C/C++: g++ build all *.cpp in folder",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++23",
                "-O3",
                "-DNDEBUG",
                "-Wall",
                "-Wextra",
                "-fdiagnostics-color=always",
                "*.cpp",
                "-I", "/usr/include/boost/",
                "-I", "${workspaceFolder}/common",
                "-L/usr/local/lib/",
                "-lboost_thread",
                 "-latomic",
                "-o", "${fileDirname}/${fileDirnameBasename}_release" 
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        },
        
    ],
    "version": "2.0.0"
}