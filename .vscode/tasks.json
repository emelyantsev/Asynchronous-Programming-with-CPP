{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build all *.cpp in folder",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++20",
                "-Wall",
                "-Wextra",
                "-pedantic",
                "-fdiagnostics-color=always",
                "-g",
                "*.cpp",
                "-I",
                "/usr/include/boost/",
                "-L/usr/local/lib/",
                "-lboost_thread",
                "-o",
                "${fileDirname}/${fileDirnameBasename}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        
    ],
    "version": "2.0.0"
}