{
    "configurations": [
        {
            "name": "C/C++: g++ build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileDirnameBasename}",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++ build all *.cpp in folder",
            "miDebuggerPath": "/usr/bin/gdb"
        },

        {
            "name": "Debug specific test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build_debug/tests/run_all_tests",
            "args": ["--gtest_filter=ThreadOutputTests.CaptureCout"],
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "stopAtEntry": true,
        }
    ],
    "version": "2.0.0"
}